stick_breaking_process = function(num_weights, alpha) {
  2         betas = rbeta(num_weights, 1, aplha)
  3         remaining_stick_lengths = c(1, cumprod(1 - betas))[1 : num_weights]
  4         weights = remaining_stick_lenghts * betas
  5         weights
  6 }
  
  alpha <- c(2,4,10)
  num_weights = 3
  stick_breaking_process(num_weights, alpha) 